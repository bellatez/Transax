<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <TextView
        android:id="@+id/dialog_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:text="@string/new_debt_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/lbl_new_note_title"
        android:textStyle="normal"/>


    <TextView android:id="@+id/income_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Debtors name"
        android:textColor="@color/note_list_text"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/debtor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Name"
        android:layout_marginBottom="@dimen/dimen_10"
        android:inputType="textCapWords|text"
        android:textColor="@color/timestamp"
        android:textColorHint="@color/hint_enter_note" />

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Contact"
        android:textColor="@color/note_list_text"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/contact_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_marginBottom="@dimen/dimen_10"
        android:inputType="phone"
        android:digits="0123456789+"
        android:textColor="@color/timestamp"
        android:textColorHint="@color/hint_enter_note" />

    <TextView android:id="@+id/dialog_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Amount Owed"
        android:textColor="@color/note_list_text"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/amnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:layout_marginBottom="@dimen/dimen_10"
        android:inputType="textCapSentences|number"
        android:textColor="@color/timestamp"
        android:textColorHint="@color/hint_enter_note" />

    <TextView android:id="@+id/dialog_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Payment Date"
        android:textColor="@color/note_list_text"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/duedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="date"
        android:focusableInTouchMode="false"
        android:hint="pay date"
        android:textColor="@color/timestamp"
        android:textColorHint="@color/hint_enter_note" />

</LinearLayout>